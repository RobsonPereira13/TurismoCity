<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.turismo.robso.turismocity1.views.Login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewLogid"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/login"
                tools:layout_editor_absoluteX="104dp"
                tools:layout_editor_absoluteY="8dp" />

            <EditText
                android:id="@+id/editTextEmailLogid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:drawableRight="@drawable/ic_mail_outline_black_24dp"
                android:ems="10"
                android:hint="Digite seu e-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="@android:color/background_dark"
                android:textColorLink="@color/login"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="128dp" />

            <EditText
                android:id="@+id/editTextSenhaLogid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:ems="10"
                android:hint="Digite sua senha"
                android:inputType="textPassword"
                android:textColorHint="@android:color/background_dark"
                android:textColorLink="@color/login"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="215dp" />

            <Button
                android:id="@+id/buttonLogid"
                android:layout_width="168dp"
                android:layout_height="67dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:background="#FF3F51B4"
                android:drawableLeft="@drawable/ic_verified_user_white_24dp"
                android:text="Entrar"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="261dp" />

            <Button
                android:id="@+id/buttonCadastrarid"
                android:layout_width="183dp"
                android:layout_height="38dp"
                android:layout_marginTop="24dp"
                android:background="?android:attr/panelBackground"
                android:drawableLeft="@drawable/ic_add_black_26dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Cadastre-se"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#42b72a"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/textViewMsgid"
                tools:layout_editor_absoluteY="324dp" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

